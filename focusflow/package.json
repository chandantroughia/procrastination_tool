{
  "name": "focusflow",
  "version": "1.0.0",
  "description": "A comprehensive procrastination tool with Chrome extension and web app",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:extension\" \"npm run dev:server\"",
    "dev:web": "cd src/web && npm run dev",
    "dev:extension": "cd src/extension && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:web && npm run build:extension",
    "build:web": "cd src/web && npm run build",
    "build:extension": "cd src/extension && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "productivity",
    "focus",
    "pomodoro",
    "task-management",
    "chrome-extension",
    "react",
    "typescript"
  ],
  "author": "FocusFlow Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "src/web",
    "src/extension",
    "server"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

